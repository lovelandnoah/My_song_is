<%= render 'layouts/nolognav' %>
<h3 class="salt center rel white-text stroke">
  <strong>
    MySong.is
  </strong>
</h3>
<br>
  
<body class="home-body">
<div class="container">
  <h2 class="center salt">Sign up</h2>
  <br />

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
      <div class="row">
        <div class="field col s8 offset-s2">
          <%= f.text_field :username, autofocus: true, placeholder: 'Username' %>
        </div>
        <div class="field col s8 offset-s2">
          <%= f.email_field :email, placeholder: 'Email' %>
        </div>

        <div class="field col s8 offset-s2">
          <%= f.password_field :password, autocomplete: "off", placeholder: 'Password' %>
        </div>
      </div>

    <div class="actions center">
      <button class="btn waves-effect waves-light black-text"><%= f.submit "Sign Up" %></button>
      <!-- <button class="btn mix-color waves-effect waves-light">Back</button> -->
    </div>
  <% end %>
</div>
</body>
