.container
	-if current_user.id == @user.id
		%h1 mysong.is/#{@user.username}
	-else
		%h1 mysong.is/#{@user.username}

	%h3 #{@user.email}
	%h2 Preferred music: #{@user.permalink}

	-if @mixtape
		%div.card-panel.cyan
			%div.card-content.white-text
				%h5.center
					= @mixtape[0].name
					- @songs.each do |song|
						.tex
							.paddin
								%h5.inline
									%span.crd
										= song.name
									%span.crd By:
									%span.crd
										= song.artist
									%button.btn.inlin.flo Play
	%img{:alt => "My QR code", :src => @qr}
	%a.moove.bigger{:href => "home#index"} Mixtape
	-if current_user.id == @user.id
		%a.moove.bigger{:href => "users_edit"} Edit
